# Blugreen Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# Backend Configuration
# ===========================================

# Database URL (SQLite for dev, PostgreSQL for prod)
# Development: sqlite:///./blugreen.db
# Production: postgresql://user:password@host:5432/blugreen
DATABASE_URL=sqlite:///./blugreen.db

# Ollama LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=["http://localhost:3000"]

# Debug mode (set to false in production)
DEBUG=true

# Workspace directory for project files
WORKSPACE_BASE=/tmp/blugreen_workspaces

# ===========================================
# Frontend Configuration
# ===========================================

# Backend API URL (must be accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================================
# Coolify Deployment (Production Only)
# ===========================================

# Coolify API endpoint
COOLIFY_API_URL=

# Coolify API token
COOLIFY_API_TOKEN=

# ===========================================
# Security (Production Only)
# ===========================================

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=

# API rate limiting
RATE_LIMIT_PER_MINUTE=60
